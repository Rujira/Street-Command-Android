<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/personIDEditText"
        android:importantForAutofill="no"
        android:focusableInTouchMode="false"
        android:selectAllOnFocus="false"
        android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/personNameEditText"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/personNameEditText"
        android:importantForAutofill="no"
        android:focusableInTouchMode="false"
        android:selectAllOnFocus="false"
        android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/percentEditText"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="140dp" tools:srcCompat="@tools:sample/avatars[14]"
        android:id="@+id/personImageView1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp" android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent" android:scaleType="fitCenter"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="140dp" tools:srcCompat="@tools:sample/avatars[14]"
        android:id="@+id/personImageView2"
        android:scaleType="fitCenter" android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/percentEditText"
        android:importantForAutofill="no"
        android:focusableInTouchMode="false"
        android:selectAllOnFocus="false"
        app:layout_constraintTop_toBottomOf="@+id/snapTextView" android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"/>

    <TextView
        android:text="@string/snap_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/snapTextView"
        app:layout_constraintStart_toStartOf="@+id/personImageView1"
        app:layout_constraintEnd_toEndOf="@+id/personImageView1"
        app:layout_constraintHorizontal_bias="0.45" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/personImageView1"/>

    <TextView
        android:text="@string/on_database_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onDatabaseTextView" app:layout_constraintEnd_toEndOf="@+id/personImageView2"
        app:layout_constraintStart_toStartOf="@+id/personImageView2"
        app:layout_constraintHorizontal_bias="0.508" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/personImageView2"/>

</androidx.constraintlayout.widget.ConstraintLayout>